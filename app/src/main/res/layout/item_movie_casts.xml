<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_movie_item">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_casts_pic"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_320" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/civ_casts_pic"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_casts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            tools:text="道恩·强森" />

        <TextView
            android:id="@+id/tv_casts_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            tools:text="演员" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/civ_casts_pic"
        android:background="@color/colorLineItem" />
</RelativeLayout>