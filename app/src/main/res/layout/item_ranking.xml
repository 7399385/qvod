<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/select_movie_item">

    <ImageView
        android:id="@+id/iv_ranking"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_200" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/iv_ranking">

        <TextView
            android:id="@+id/tv_ranking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            tools:text="这是标题" />

        <TextView
            android:id="@+id/tv_direct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ranking_title"
            android:layout_marginTop="2dp"
            android:text="导演：" />

        <TextView
            android:id="@+id/tv_direct_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ranking_title"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_direct"
            tools:text="卡梅隆" />

        <TextView
            android:id="@+id/tv_actor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_direct_content"
            android:layout_marginTop="2dp"
            android:text="演员：" />

        <TextView
            android:id="@+id/tv_actor_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_direct"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_actor"
            tools:text="汤姆/汤姆/汤姆/汤姆/汤姆/汤姆/汤姆/汤姆/" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_actor_content"
            android:layout_marginTop="2dp"
            android:text="类型：" />

        <TextView
            android:id="@+id/tv_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_actor_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_type"
            tools:text="动作/奇幻/冒险" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type_content"
            android:layout_marginTop="2dp"
            android:text="评分：" />

        <TextView
            android:id="@+id/tv_score_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type_content"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/tv_score"
            tools:text="6.9" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/iv_ranking"
        android:background="@color/itemRollBackground" />

</RelativeLayout>